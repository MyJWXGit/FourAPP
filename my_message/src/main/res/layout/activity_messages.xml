<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MessagesActivity">
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:id="@+id/message_fanhui"
            android:background="@mipmap/common_icon_white_n"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="消息"
            android:textSize="16sp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:text="全部已读"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/message_linear"
        android:background="#dddddd"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/layout_corners"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/message_text"
                android:text="X"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:textSize="12sp"
                android:text="打开系统通知,H币入账等消息不错过"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="24dp"/>
            <Button
                android:id="@+id/message_but"
                android:background="@drawable/button_corners"
                android:layout_width="38dp"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:text="开启"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_height="18dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/xitongxiaoxi"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/system_information"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统消息"
            android:textSize="14sp"
            android:textColor="#4FCB9F"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="#dddddd"
        android:layout_width="fill_parent"
        android:layout_height="1sp"/>

    <LinearLayout
        android:id="@+id/wenzhenxiaoxi"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/interview_news"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问诊消息"
            android:textSize="14sp"
            android:textColor="#FB4FC7"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:background="#dddddd"
        android:layout_width="fill_parent"
        android:layout_height="1sp"/>

    <LinearLayout
        android:id="@+id/ruzhangxinxi"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/recorded_message"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H币入账信息"
            android:textSize="14sp"
            android:textColor="#FFAB26"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="#dddddd"
        android:layout_width="fill_parent"
        android:layout_height="1sp"/>
</LinearLayout>