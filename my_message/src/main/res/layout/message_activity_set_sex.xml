<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wd.my_message.view.SetSexActivity">
    <RelativeLayout
        android:id="@+id/biaoti"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fanhui"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/common_icon_white_n" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textStyle="bold"
            android:text="选择性别"
            android:textSize="18sp" />
    </RelativeLayout>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RadioButton
            android:id="@+id/radio_nan1"
            android:background="@mipmap/boy"
            android:button="@null"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="@dimen/permission_dp_30"
            android:layout_width="120dp"
            android:layout_height="120dp"/>
        <TextView
            android:textColor="#4fcb9f"
            android:textSize="@dimen/permission_sp_14"
            android:text="男"
            android:gravity="center"
            android:layout_marginLeft="@dimen/permission_dp_30"
            android:layout_marginTop="@dimen/permission_dp_20"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/radio_nan2"
            android:background="@mipmap/boy"
            android:button="@null"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="@dimen/permission_dp_30"
            android:layout_width="120dp"
            android:layout_height="120dp"/>
        <TextView
            android:textColor="#4fcb9f"
            android:textSize="@dimen/permission_sp_14"
            android:text="男"
            android:gravity="center"
            android:layout_marginLeft="@dimen/permission_dp_30"
            android:layout_marginTop="@dimen/permission_dp_20"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
    </RadioGroup>
    <RadioGroup
        android:layout_marginRight="@dimen/permission_dp_30"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RadioButton
            android:id="@+id/radio_nv1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="150dp"
            android:background="@mipmap/girl"
            android:button="@null" />

        <TextView
            android:textColor="#f984a2"
            android:textSize="@dimen/permission_sp_14"
            android:text="女"
            android:gravity="center"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="@dimen/permission_dp_20"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/radio_nv2"
            android:background="@mipmap/girl"
            android:button="@null"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="200dp"
            android:layout_width="120dp"
            android:layout_height="120dp"/>
        <TextView
            android:textColor="#f984a2"
            android:textSize="@dimen/permission_sp_14"
            android:text="女"
            android:gravity="center"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="@dimen/permission_dp_20"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
    </RadioGroup>
    <ImageView
        android:visibility="invisible"
        android:id="@+id/check_nan1"
        android:layout_marginLeft="44dp"
        android:src="@mipmap/selected"
        android:layout_marginTop="255dp"
        android:layout_width="91dp"
        android:layout_height="21dp"/>
    <ImageView
        android:visibility="invisible"
        android:id="@+id/check_nan2"
        android:layout_marginLeft="44dp"
        android:src="@mipmap/selected"
        android:layout_marginTop="485dp"
        android:layout_width="91dp"
        android:layout_height="21dp"/>
    <ImageView
        android:visibility="invisible"
        android:id="@+id/check_nv1"
        android:layout_marginRight="44dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/selected"
        android:layout_marginTop="255dp"
        android:layout_width="91dp"
        android:layout_height="21dp"/>
    <ImageView
        android:visibility="invisible"
        android:id="@+id/check_nv2"
        android:layout_marginRight="44dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/selected"
        android:layout_marginTop="485dp"
        android:layout_width="91dp"
        android:layout_height="21dp"/>

    <Button
        android:id="@+id/Set_Sex_btn"
        android:layout_marginRight="@dimen/permission_dp_15"
        android:layout_marginTop="17dp"
        android:layout_alignParentRight="true"
        android:textColor="#ffffff"
        android:text="完成"
        android:background="@drawable/shape1"
        android:layout_width="52dp"
        android:layout_height="24dp"/>
</RelativeLayout>