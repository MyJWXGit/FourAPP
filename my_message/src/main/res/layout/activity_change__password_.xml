<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4D1D1"
    tools:context=".view.Change_Password_Activity">
    <RelativeLayout
        android:id="@+id/biaoti"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fanhui"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/common_icon_white_n" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textStyle="bold"
            android:text="修改密码"
            android:textSize="18sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/permission_dp_10"
        android:background="#fff"
        android:layout_below="@id/biaoti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/permission_dp_20"
        android:layout_marginTop="@dimen/permission_dp_20"
        android:text="我的密码"
        android:textSize="@dimen/permission_sp_14"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/permission_dp_20"
        android:layout_marginTop="64dp"
        android:text="设置新密码"
        android:textSize="@dimen/permission_sp_14"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/permission_dp_20"
        android:layout_marginTop="108dp"
        android:text="确认新密码"
        android:textSize="@dimen/permission_sp_14"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_yuan"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="21dp"
        android:layout_marginRight="@dimen/permission_dp_20"
        android:background="@null"
        android:hint="请输入原密码"
        android:textColor="#b8b8b8"
        android:textSize="@dimen/permission_sp_12" />

    <EditText
        android:id="@+id/edit_xin"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="65dp"
        android:layout_marginRight="@dimen/permission_dp_20"
        android:background="@null"
        android:hint="请输入新密码"
        android:textColor="#b8b8b8"
        android:textSize="@dimen/permission_sp_12" />

    <EditText
        android:id="@+id/edit_queding"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="109dp"
        android:layout_marginRight="@dimen/permission_dp_20"
        android:background="@null"
        android:hint="请再次输入新密码"
        android:textColor="#b8b8b8"
        android:textSize="@dimen/permission_sp_12"
        android:layout_marginBottom="@dimen/permission_dp_20"/>
    </RelativeLayout>

    <Button
        android:textColor="#ffffff"
        android:id="@+id/btn_ding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/permission_dp_30"
        android:layout_marginRight="@dimen/permission_dp_30"
        android:layout_marginBottom="60dp"
        android:background="@drawable/shape1"
        android:text="确定" />


</RelativeLayout>