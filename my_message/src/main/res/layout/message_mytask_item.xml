<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_marginTop="15dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/mttaskitem_text"
        android:text="签到"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/mttaskitem_hbi"
        android:layout_below="@id/mttaskitem_text"
        android:layout_marginTop="3dp"
        android:text="+10H币"
        android:textColor="@color/blue"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/mttaskitem_quwancheng"
        android:textSize="12sp"
        android:text="去完成"
        android:background="@drawable/button_corners"
        android:layout_alignParentRight="true"
        android:textColor="#ffffff"
        android:layout_width="60dp"
        android:layout_height="30dp"/>
    <Button
        android:id="@+id/mttaskitem_yiwancheng"
        android:textSize="12sp"
        android:text="已完成"
        android:visibility="gone"
        android:background="@drawable/button_corners_gray"
        android:layout_alignParentRight="true"
        android:layout_width="60dp"
        android:layout_height="30dp"/>
    <Button
        android:id="@+id/mttaskitem_lingquhbi"
        android:textSize="12sp"
        android:text="领H币"
        android:visibility="gone"
        android:background="@drawable/button_corners_green"
        android:layout_alignParentRight="true"
        android:textColor="#ffffff"
        android:layout_width="60dp"
        android:layout_height="30dp"/>
</RelativeLayout>

</LinearLayout>
