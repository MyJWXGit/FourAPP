<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wd.doctor.view.activity.RegisterActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="#3087ea"
        android:text="完善信息"
        android:layout_marginTop="@dimen/dp_74"
        android:layout_marginLeft="@dimen/dp_30"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="#3087ea"
        android:text="申核通过即可成功入驻"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_30"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="#666666"
        android:text="你的邮箱账号"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_40">

        <EditText
            android:id="@+id/register_zhang"
            android:layout_width="@dimen/dp_226"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/edit"
            android:paddingLeft="@dimen/dp_20"
            android:hint="请输入密码"
            android:lines="1"
            android:maxLength="17"
            android:inputType="textPassword"
            android:textColorHint="#fff"
            android:textColor="#fff" />
        <Button
            android:id="@+id/register_forget"
            android:background="@drawable/shape4"
            android:text="获取验证码"
            android:textColor="#fff"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="#666666"
        android:text="请输入验证码"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"/>
    <EditText
        android:id="@+id/register_ma"
        style="@style/edtext1"
        android:textColorHint="#fff"
        android:lines="1"
        android:textColor="#fff"
        android:maxLength="17"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="#666666"
        android:text="请输入密码"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/register_mi"
            style="@style/edtext1"
            android:textColorHint="#fff"
            android:lines="1"
            android:inputType="textPassword"
            android:textColor="#fff"
            android:maxLength="17"
            />

        <ImageView
            android:id="@+id/register_hiet"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="-40dp"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_toRightOf="@id/register_mi"
            android:src="@mipmap/login_icon_hide_password_n" />
        <ImageView
            android:id="@+id/register_show"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="-40dp"
            android:layout_marginTop="@dimen/dp_25"
            android:visibility="gone"
            android:layout_toRightOf="@id/register_mi"
            android:src="@mipmap/login_icon_show_password" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="#666666"
        android:text="请再次输入密码"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/register_ermi"
            style="@style/edtext1"
            android:textColorHint="#fff"
            android:lines="1"
            android:inputType="textPassword"
            android:textColor="#fff"
            android:maxLength="17"
            />
        <ImageView
            android:id="@+id/register_hiet1"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="-40dp"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_toRightOf="@id/register_ermi"
            android:src="@mipmap/login_icon_hide_password_n" />
        <ImageView
            android:id="@+id/register_show1"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="-40dp"
            android:layout_marginTop="@dimen/dp_25"
            android:visibility="gone"
            android:layout_toRightOf="@id/register_ermi"
            android:src="@mipmap/login_icon_show_password" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_30"
            android:background="@drawable/shape4"
            android:layout_alignParentBottom="true"
            android:text="下一步"
            android:textColor="#fff"
            android:layout_marginBottom="@dimen/dp_30"
            android:id="@+id/register_xia"/>
    </RelativeLayout>
</LinearLayout>
