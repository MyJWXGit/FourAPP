<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wd.doctor.view.activity.DetailsActivity">
    <RelativeLayout
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="26dp">

        <ImageView
            android:id="@+id/details_backfh"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/common_icon_back_black_n" />
        <TextView
            android:id="@id/details_back"
            android:layout_centerHorizontal="true"
            android:text="我的电影票"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="22dp" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="9"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textColor="#3087ea"
                android:layout_marginLeft="@dimen/dp_30"
                android:id="@+id/details_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3087ea"
                android:text="[病症]"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/details_disease"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3087ea"
                android:text="[科室]"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/details_departmentName"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3087ea"
                android:text="[病症详情]"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/details_detail"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3087ea"
                android:text="[治疗经历]"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:id="@+id/design_treatmentHospital"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:id="@+id/design_treatmentStartTime"
                    android:text="123"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/design_treatmentProcess"
                    android:text="454654646"
                    android:layout_below="@id/design_treatmentHospital"
                    android:layout_marginTop="@dimen/dp_5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/design_treatmentProcess"
                    android:textColor="#3087ea"
                    android:text="[相关图片]"
                    android:id="@+id/xinfgg"

                    android:layout_marginTop="@dimen/dp_20"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_180"
                    android:layout_below="@+id/xinfgg"
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/design_picture"
                    android:layout_marginRight="@dimen/dp_20"
                    ></com.facebook.drawee.view.SimpleDraweeView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/design_picture"
                    android:text="我的解答"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#4fcb9f"
                    android:id="@+id/jieda"
                    android:visibility="gone"
                    />
               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_80"
                   android:background="@drawable/edit"
                   android:layout_below="@+id/jieda"
                   android:id="@+id/wdejida"
                   android:visibility="gone"
                   android:layout_marginTop="@dimen/dp_10"
                   android:layout_marginRight="@dimen/dp_20"
                   />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/butd"
            android:visibility="gone"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发表"
                android:id="@+id/publish"
                 android:background="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/but"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:text="30H币"
                android:background="#fff"
                android:textColor="#E8185E"
                android:id="@+id/xiepingl"
                />
            <Button
                android:id="@+id/xuanz"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:text="我要解答"
                android:background="#3087ea"
                android:textColor="#fff"
                />
        </LinearLayout>
    </RelativeLayout>

