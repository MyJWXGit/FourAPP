<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wd.doctor.view.activity.message.MessageActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_260"
        android:layout_margin="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/details_back"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/common_icon_back_black_n" />
        <ImageView
            android:id="@+id/lingdan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_5"
            android:src="@mipmap/common_nav_message_black_n"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/message_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/lingdan"
            android:layout_toRightOf="@id/details_back"
            />
        <TextView
            android:id="@+id/message_xiangq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="查看详情 >>>"
            android:textColor="#3087ea"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/message_history"
            android:layout_width="@dimen/dp_125"
            android:layout_height="@dimen/dp_140"
            android:layout_marginLeft="@dimen/dp_36"
            android:background="@drawable/editetr"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/doctor_inquiry_n"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:text="历史问诊"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/message_wallet"
            android:layout_width="@dimen/dp_125"
            android:layout_height="@dimen/dp_140"
            android:layout_marginLeft="@dimen/dp_28"
            android:background="@drawable/editetr"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/doctor_icon_wallet_n"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:text="我的钱包"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/message_suggest"
            android:layout_width="@dimen/dp_125"
            android:layout_height="@dimen/dp_140"
            android:layout_marginLeft="@dimen/dp_36"
            android:background="@drawable/editetr"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/doctor_recommendations_adopted_n"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:text="被采纳的意见"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/message_seif"
            android:layout_width="@dimen/dp_125"
            android:layout_height="@dimen/dp_140"
            android:layout_marginLeft="@dimen/dp_28"
            android:background="@drawable/editetr"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/doctor_automatic_response_n"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:text="设置自动回复"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
