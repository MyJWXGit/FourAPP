<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wd.doctor.view.activity.message.PersonageActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_26"
        android:layout_margin="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/details_back"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/common_icon_back_black_n" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_40"
        >
        <TextView
            android:id="@+id/name"
            style="@style/prabntext"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名"/>
       <TextView
           android:id="@+id/personage_name"
           style="@style/prabntext1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="张三"
           />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:background="#f2f2f2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        >
        <TextView
            android:id="@+id/hospital"
            style="@style/prabntext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所属医院"/>
        <TextView
            android:id="@+id/personage_hospital"
            style="@style/prabntext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广东"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:background="#f2f2f2"
        />
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_30"
    android:layout_marginTop="@dimen/dp_20"
    >
    <TextView
        android:id="@+id/keshi"
        style="@style/prabntext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所属科室"/>
    <TextView
        android:id="@+id/personage_keshi"
        style="@style/prabntext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="广东"
        />
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:background="#f2f2f2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        >
        <TextView
            android:id="@+id/zhicheng"
            style="@style/prabntext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职称"/>
        <TextView
            android:id="@+id/personage_zhicheng"
            style="@style/prabntext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主任"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:background="#f2f2f2"
        />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="@dimen/dp_30"
         android:layout_marginTop="@dimen/dp_20"
         android:orientation="vertical"
         >
         <TextView
             style="@style/prabntext"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="个人介绍"
             />
         <TextView
             android:id="@+id/persongge_jieshao"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/dp_10"
             android:text="163434343"
             />
     </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:background="#f2f2f2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical"
        >
        <TextView
            style="@style/prabntext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="擅长领域"
            />
        <TextView
            android:id="@+id/persongge_lingyu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="163434343"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            style="@style/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="如果要更改以上信息 请致电000 596 7432"/>
    </RelativeLayout>
</LinearLayout>
