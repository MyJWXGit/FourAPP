<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wd.doctor.view.activity.GuideActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_140"
        android:src="@mipmap/shy"
        android:id="@+id/long_img"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="维度健康"
        android:layout_below="@id/long_img"
        android:layout_centerHorizontal="true"
        android:id="@+id/login_jiank"
        style="@style/text1"
        android:layout_marginTop="@dimen/dp_30"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="医生版"
        android:layout_gravity="center"
        android:layout_below="@id/login_jiank"
        android:layout_centerHorizontal="true"
        style="@style/text1"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="@dimen/sp_14"
        android:text="八维移动通信学院毕业作品"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_40"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:layout_alignParentRight="true"
        android:text="5s"
        android:padding="@dimen/dp_10"
        android:id="@+id/textnum"
        />
</RelativeLayout>
