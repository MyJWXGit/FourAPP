<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/tv_zh"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="6dp"
            android:text="综合"
            android:textSize="18dp"></TextView>

        <TextView
            android:id="@+id/tv_hp"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="6dp"
            android:text="好评"
            android:textSize="18dp"></TextView>

        <TextView
            android:id="@+id/tv_zxs"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="6dp"
            android:text="咨询数"
            android:textSize="18dp"></TextView>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="6dp"
            android:text="价格"
            android:textSize="18dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_pic"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            app:actualImageScaleType="fitXY"
            app:backgroundImage="@android:color/background_light"
            app:retryImageScaleType="fitXY"></com.facebook.drawee.view.SimpleDraweeView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="德玛西亚"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/tv_jobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_name"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/tv_name"
                android:text="副主任"
                android:textSize="@dimen/sp_16"></TextView>

            <TextView
                android:id="@+id/tv_inauguralHospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginTop="5dp"
                android:text="就职医院"
                android:textSize="@dimen/sp_16"></TextView>

            <TextView
                android:id="@+id/tv_praiseNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_inauguralHospital"
                android:layout_marginTop="5dp"
                android:text="好评率   98%"
                android:textSize="@dimen/sp_16"></TextView>

            <TextView
                android:id="@+id/tv_serverNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_praiseNum"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/tv_praiseNum"
                android:text="服务患者数    18"
                android:textSize="@dimen/sp_16"></TextView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_servicePrice"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="center"
                android:padding="8dp"
                android:text="服务价钱/次"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/tv_ask"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="#03A9F4"
                android:gravity="center"
                android:padding="8dp"
                android:text="立即咨询"
                android:textColor="@android:color/background_light"
                android:textSize="18dp"></TextView>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_left"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            app:placeholderImage="@mipmap/common_list_previous_n"></com.facebook.drawee.view.SimpleDraweeView>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_right"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:placeholderImage="@mipmap/common_information_next_n"></com.facebook.drawee.view.SimpleDraweeView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"></androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/tv_pageNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv_doctor"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:text="3/33"></TextView>

    </RelativeLayout>

</LinearLayout>
