<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/registered_icon_logo"
        android:layout_width="67dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:src="@mipmap/whitelogo" />

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="400dp"
        android:layout_below="@id/registered_icon_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:alpha="0.3"
        android:background="#FFF"></RelativeLayout>

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="400dp"
        android:layout_below="@id/registered_icon_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:alpha="0.6"
        android:background="#FFF"></RelativeLayout>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="400dp"
        android:layout_below="@+id/registered_icon_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="#FFF">

        <ImageView
            android:id="@+id/iv_mail_n"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/login_icon_mail_n" />

        <EditText
            android:id="@+id/registered_et_youxiang"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:hint="请输入邮箱"
            android:lines="1"
            android:maxLength="20"
            android:paddingLeft="31dp"
            android:paddingBottom="17dp"
            android:shadowColor="#999999"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="14dp"></EditText>

        <Button
            android:id="@+id/registered_cb_code"
            android:layout_width="58dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/iv_mail_n"
            android:layout_alignParentRight="true"
            android:layout_marginRight="33dp"
            android:background="#3087ea"
            android:button="@null"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="10dp"></Button>

        <ImageView
            android:id="@+id/icon_verification"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/registered_et_youxiang"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/register_icon_verification_code_n"

            />

        <EditText
            android:id="@+id/registered_et_code"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_below="@id/registered_et_youxiang"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:hint="请输入验证码"
            android:lines="1"
            android:maxLength="10"
            android:paddingLeft="35dp"
            android:paddingBottom="17dp"
            android:shadowColor="#999999"
            android:textColor="#999999"
            android:textSize="14dp"></EditText>

        <ImageView
            android:id="@+id/icon_lock_one"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/registered_et_code"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/login_icon_lock_n" />

        <EditText
            android:id="@+id/registered_et_pwd"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_below="@id/registered_et_code"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:hint="请输入密码"
            android:lines="1"
            android:maxLength="10"
            android:paddingLeft="35dp"
            android:paddingBottom="17dp"
            android:password="true"
            android:shadowColor="#999999"
            android:textColor="#999999"
            android:textSize="14dp"></EditText>

        <ImageView
            android:id="@+id/registered_icon_yanone"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@id/registered_et_code"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="35dp"
            android:src="@mipmap/login_icon_hide_password_n"></ImageView>

        <ImageView
            android:id="@+id/icon_lock_two"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/registered_et_pwd"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/login_icon_lock_n" />

        <EditText
            android:id="@+id/registered_et_pwdtwo"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_below="@id/registered_et_pwd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:hint="请再次输入密码"
            android:lines="1"
            android:maxLength="10"
            android:paddingLeft="35dp"
            android:paddingBottom="17dp"
            android:password="true"
            android:shadowColor="#999999"
            android:textColor="#999999"
            android:textSize="14dp"></EditText>

        <ImageView
            android:id="@+id/registered_icon_yantwo"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@id/registered_et_pwd"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="35dp"
            android:src="@mipmap/login_icon_hide_password_n"></ImageView>

        <ImageView
            android:id="@+id/icon_invitatiion"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/registered_et_pwdtwo"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/register_icon_invitatiion_code_n" />

        <EditText
            android:id="@+id/registered_et_yaoqing"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_below="@id/registered_et_pwdtwo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:hint="请输入邀请码"
            android:lines="1"
            android:maxLength="10"
            android:paddingLeft="35dp"
            android:paddingBottom="17dp"
            android:shadowColor="#999999"
            android:textColor="#999999"
            android:textSize="14dp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/registered_et_pwdtwo"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="35dp"
            android:text="选填"
            android:textColor="#333333"
            android:textSize="10dp"></TextView>

        <Button
            android:id="@+id/registered_bt_zhuce"
            android:layout_width="230dp"
            android:layout_height="36dp"
            android:layout_below="@id/registered_et_yaoqing"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:background="#FFF"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="14dp"></Button>
    </RelativeLayout>
</RelativeLayout>