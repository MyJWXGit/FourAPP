<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VideoActivity">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/video_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/video_tab"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/permission_dp_40"
        app:tabIndicatorHeight="0dp"
        app:tabSelectedTextColor="@color/tabxuan" />


        <CheckBox
            android:layout_below="@id/video_tab"
            android:id="@+id/video_pull"
            android:button="@null"
            android:background="@drawable/video_selector_pendant"
            android:paddingLeft="@dimen/permission_dp_10"
            android:paddingRight="@dimen/permission_dp_10"
            android:paddingBottom="@dimen/permission_dp_10"
            android:layout_marginRight="@dimen/permission_dp_20"
            android:layout_alignParentRight="true"
            android:src="@mipmap/drop_down"
            android:layout_width="@dimen/permission_dp_15"
            android:layout_height="88dp"/>

</RelativeLayout>